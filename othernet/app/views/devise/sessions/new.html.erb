<div class='header'>Log in</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="twelve columns">
      <%= f.label :another_name, :class => "header" %>
      <%= f.text_field :another_name, autofocus: true,:input_html => { :class => "u-full-width" } %>
    </div>

    <div class="twelve columns">
      <%= f.label :password, :class => "header" %>
      <%= f.password_field :password, autocomplete: "off",:input_html => { :class => "u-full-width" } %>
    </div>
  </div>  


  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
